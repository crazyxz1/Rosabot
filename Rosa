import discord
from discord.ext import commands
import asyncio

intents = discord.Intents.default()
intents.messages = True
intents.guilds = True
intents.message_content = True  # NecessÃ¡rio para comandos com prefixo

bot = commands.Bot(command_prefix="!", intents=intents)

# ğŸ”¹ Sistema de Slash Commands
tree = bot.tree  # Usado para slash commands

@bot.event
async def on_ready():
    await bot.tree.sync()  # Sincroniza os Slash Commands
    print(f"Bot {bot.user} estÃ¡ online!")

# ğŸŸ¢ Comando com Prefixo: Ping
@bot.command()
async def ping(ctx):
    await ctx.send("ğŸ“ Pong!")

# ğŸ”µ Slash Command: Ping
@tree.command(name="ping", description="Veja a latÃªncia do bot")
async def ping_slash(interaction: discord.Interaction):
    await interaction.response.send_message("ğŸ“ Pong!", ephemeral=True)

# ğŸŸ¢ Comando com Prefixo: Avatar
@bot.command()
async def avatar(ctx, user: discord.Member = None):
    user = user or ctx.author
    await ctx.send(f"ğŸ–¼ï¸ Avatar de {user.mention}: {user.avatar.url}")

# ğŸ”µ Slash Command: Avatar
@tree.command(name="avatar", description="Veja o avatar de um usuÃ¡rio")
async def avatar_slash(interaction: discord.Interaction, user: discord.Member = None):
    user = user or interaction.user
    await interaction.response.send_message(f"ğŸ–¼ï¸ Avatar de {user.mention}: {user.avatar.url}")

# ğŸŸ¢ Comando com Prefixo: UserInfo
@bot.command()
async def userinfo(ctx, user: discord.Member = None):
    user = user or ctx.author
    embed = discord.Embed(title=f"InformaÃ§Ãµes de {user.name}", color=discord.Color.blue())
    embed.set_thumbnail(url=user.avatar.url)
    embed.add_field(name="ğŸ†” ID", value=user.id, inline=False)
    embed.add_field(name="ğŸ“† Criado em", value=user.created_at.strftime("%d/%m/%Y"), inline=False)
    await ctx.send(embed=embed)

# ğŸ”µ Slash Command: UserInfo
@tree.command(name="userinfo", description="Veja informaÃ§Ãµes sobre um usuÃ¡rio")
async def userinfo_slash(interaction: discord.Interaction, user: discord.Member = None):
    user = user or interaction.user
    embed = discord.Embed(title=f"InformaÃ§Ãµes de {user.name}", color=discord.Color.blue())
    embed.set_thumbnail(url=user.avatar.url)
    embed.add_field(name="ğŸ†” ID", value=user.id, inline=False)
    embed.add_field(name="ğŸ“† Criado em", value=user.created_at.strftime("%d/%m/%Y"), inline=False)
    await interaction.response.send_message(embed=embed)

# ğŸŸ¢ Comando com Prefixo: Ajuda
@bot.command()
async def ajuda(ctx):
    embed = discord.Embed(
        title="ğŸ“œ Lista de Comandos",
        description="Aqui estÃ£o os comandos disponÃ­veis no bot:",
        color=discord.Color.green()
    )
    embed.add_field(name="`!ping` / `/ping`", value="Veja a latÃªncia do bot.", inline=False)
    embed.add_field(name="`!avatar @usuÃ¡rio` / `/avatar`", value="Veja o avatar de um usuÃ¡rio.", inline=False)
    embed.add_field(name="`!userinfo @usuÃ¡rio` / `/userinfo`", value="Veja informaÃ§Ãµes sobre um usuÃ¡rio.", inline=False)
    embed.add_field(name="`!ajuda` / `/ajuda`", value="Mostra esta lista de comandos.", inline=False)
    embed.add_field(name="`/desligar`", value="Desliga o bot (apenas admins).", inline=False)
    await ctx.send(embed=embed)

# ğŸ”µ Slash Command: Ajuda
@tree.command(name="ajuda", description="Mostra a lista de comandos disponÃ­veis")
async def ajuda_slash(interaction: discord.Interaction):
    embed = discord.Embed(
        title="ğŸ“œ Lista de Comandos",
        description="Aqui estÃ£o os comandos disponÃ­veis no bot:",
        color=discord.Color.green()
    )
    embed.add_field(name="`!ping` / `/ping`", value="Veja a latÃªncia do bot.", inline=False)
    embed.add_field(name="`!avatar @usuÃ¡rio` / `/avatar`", value="Veja o avatar de um usuÃ¡rio.", inline=False)
    embed.add_field(name="`!userinfo @usuÃ¡rio` / `/userinfo`", value="Veja informaÃ§Ãµes sobre um usuÃ¡rio.", inline=False)
    embed.add_field(name="`!ajuda` / `/ajuda`", value="Mostra esta lista de comandos.", inline=False)
    embed.add_field(name="`/desligar`", value="Desliga o bot (apenas admins).", inline=False)
    await interaction.response.send_message(embed=embed, ephemeral=False)

# ğŸ”´ Comando para Desligar o Bot (Apenas Admins)
@tree.command(name="desligar", description="Desliga o bot (apenas para administradores)")
async def desligar(interaction: discord.Interaction):
    if not interaction.user.guild_permissions.administrator:
        await interaction.response.send_message("âŒ VocÃª nÃ£o tem permissÃ£o para desligar o bot!", ephemeral=False)
        return
    
    await interaction.response.send_message("ğŸ”´ O bot estÃ¡ desligando...", ephemeral=False)
    await bot.close()
    
